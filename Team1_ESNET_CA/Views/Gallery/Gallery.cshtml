
@{
    ViewData["Title"] = "Gallery Page";

    var Product_Image = (List<Product>)ViewData["Product_Image"];
    var likes = (List<string>)ViewData["likes"];
}

@section Scripts
    {
    <script src="~/js/shared/image_gallery.js"></script>
}

<style>
    table {
        width: 100%;
        margin: auto;
    }

    .badge {
        font-size: 14px !important;
    }

    .like_icon {
        width: 40px;
        height: 40px;
        position: absolute;
        top: 5px;
        right: 30px;
        cursor: pointer;
    }

    .img_container {
        position: relative;
    }

    .badge_container {
        position: absolute;
        left: 10px;
        bottom: 10px;
        opacity: 0.7;
    }

    .bold_menu {
        font-weight: bold;
    }
</style>


<table>

    @for (int i = 0; i < Product_Image.Count; i++)
    {
        @*string[] atag = tags[i].Split(",");*@

        if (i % 3 == 0)
        {
            @:<tr>
            }

            @:<td>
                @:<div class="img_container">
                    @:<img src=@Product_Image[i].Download_Link width="350" height="235" />




                    if (ViewData["sessionId"] != null)
                    {
                        string icon_link = "/img/like_gray.png";

                        string id = likes.Find(x => x == Product_Image[i].Product_ID);
                        if (id != null)
                        {
                            icon_link = "/img/like.png";
                        }

                        @:<img src=@icon_link class="like_icon" id=@Product_Image[i].Download_Link />
                    }

                    @:<div class="badge_container">
                        @for (int k = 0; k < Product_Image[i].Tags.Count; k++)
                        {
                            @:<span class="badge badge-pill badge-dark">@Product_Image[i].Tags[k]</span>
                        }
                    @:</div>
                @:</div>
            @:</td>


            if ((i + 1) % 3 == 0)
            {
            @:</tr>
        }
    }

</table>